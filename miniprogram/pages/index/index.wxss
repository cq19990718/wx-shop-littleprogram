.page-title {
  font-size: 44rpx;
  font-weight: 600;
  padding: 0 32rpx;
  color: var(--primary-color);
}

.ad-swiper {
  width: 100%;
  height: 400rpx;
  margin: 24rpx 0;
}

.ad-image {
  width: 100%;
  height: 100%;
  border-radius: var(--border-radius);
}

.product-list {
  padding: 24rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.product-item {
  background: var(--card-background);
  border-radius: var(--border-radius);
  overflow: hidden;
  transition: transform 0.3s ease;
}

.product-item:active {
  transform: scale(0.98);
}

.product-image {
  width: 100%;
  height: 320rpx;
  background: #f5f5f7;
}

.product-info {
  padding: 24rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.product-desc {
  font-size: 28rpx;
  color: var(--secondary-color);
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.buy-btn {
  min-width: 80rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  background: var(--primary-color);
  color: #fff;
  border-radius: 28rpx;
  margin: 0;
}

.buy-btn:active {
  opacity: 0.8;
}

