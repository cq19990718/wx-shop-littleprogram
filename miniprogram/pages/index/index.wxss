.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10px);
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  margin: 16rpx 0;
}

.nav-tabs {
  display: flex;
  width: 480rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 32rpx;
  padding: 4rpx;
  margin: 16rpx 0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: var(--secondary-color);
  border-radius: 28rpx;
  transition: all 0.3s ease;
}

.tab.active {
  background: #fff;
  color: var(--primary-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}