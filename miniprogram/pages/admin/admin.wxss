.container {
  padding: 20rpx;
  margin-top: 180rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  font-size: 28rpx;
  color: var(--secondary-color);
  margin-bottom: 8rpx;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  background: var(--card-background);
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-top: 8rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: var(--card-background);
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-top: 8rpx;
  line-height: 1.4;
}

.input:focus, .textarea:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.05);
}

.image-container {
  width: 100%;
  height: 400rpx;
  background: var(--background-color);
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

.upload-btn {
  color: var(--secondary-color);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  background: var(--primary-color);
  border: none;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10px);
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 120rpx;
  padding-right: 120rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  margin: 16rpx 0;
}

.nav-tabs {
  display: flex;
  width: 600rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 32rpx;
  padding: 4rpx;
  margin: 16rpx 0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: var(--secondary-color);
  border-radius: 28rpx;
  transition: all 0.3s ease;
}

.tab.active {
  background: #fff;
  color: var(--primary-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.back-btn {
  position: fixed;
  left: 24rpx;
  top: calc(var(--status-bar-height, 44px) + 8px);
  z-index: 101;
  display: flex;
  align-items: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: var(--primary-color);
}

.back-icon {
  font-size: 36rpx;
  margin-right: 4rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  flex: 1;
  text-align: center;
}

/* Tabs样式 */
.tabs-header {
  display: none;
}

/* 商品列表样式 */
.product-list {
  padding: 20rpx;
}

.product-item {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.product-info {
  flex: 1;
  margin-left: 20rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: bold;
}

.delete-btn {
  margin-left: 20rpx;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: var(--secondary-color);
  font-size: 28rpx;
}

.empty-tip::before {
  content: '📦';
  display: block;
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

/* 广告管理样式 */
.ad-management {
  padding: 24rpx;
}

.upload-ad-btn {
  margin-bottom: 30rpx;
}

.ad-list {
  margin-top: 24rpx;
}

.ad-item {
  background: var(--card-background);
  border-radius: var(--border-radius);
  margin-bottom: 24rpx;
  overflow: hidden;
  position: relative;
}

.ad-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

.ad-item .delete-btn {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  background: rgba(255, 59, 48, 0.9);
  color: #ffffff;
  border: none;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
}

/* 广告列表空状态使用不同的图标 */
.ad-list .empty-tip::before {
  content: '🖼️';
}

/* 上传图片占位符样式 */
.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--secondary-color);
}

.upload-placeholder::before {
  content: '📷';
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

/* 内容区域调整上边距 */
.content {
  margin-top: 180rpx;
  padding: 20rpx;
  padding-bottom: 24rpx;
}


.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  margin: 16rpx 0;
  flex: 1;
  text-align: center;
}

/* 表单卡片样式 */
.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 24rpx;
}
.back-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}
